<body class="text-center">
	<form class="form-signin" method="POST" action="/users/login">
		<img class="mb-4" src="/img/logo.png" alt="" width="72" height="72">
		<h1 class="h3 mb-3 font-weight-normal">Đăng nhập <strong style="color: #f4623a;">Match</strong></h1>

		{{#if errors }}
			{{#each errors }}
				<p class="alert alert-danger">{{ this.msg }}</p>
			{{/each}}
		{{/if}}

		<div class="mb-3">
			<label for="inputEmail" class="sr-only">Email</label>
			<input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required
				autofocus>
		</div>
		<div class="mb-3">
			<label for="inputPassword" class="sr-only">Mật khẩu</label>
			<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mật khẩu"
				required>
		</div>

		<div class="checkbox mb-2">
			<label>
				<input type="checkbox" value="remember-me"> Ghi nhớ tôi
			</label>
		</div>
		<button class="btn btn-lg btn-primary btn-block" type="submit">Đăng nhập</button>
	</form>
</body>